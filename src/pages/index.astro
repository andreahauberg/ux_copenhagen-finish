---
import MainLayout from "../layouts/MainLayout.astro";
import HomeButton from "../components/HomeButton.astro";
---

<MainLayout title="Home">
  <div>
    <div class="home_title">
      <h1>UX Conference</h1>
      <h2>20-21 of March 2024</h2>
    </div>
    <div>
      <h3>See you there?</h3>
      <div class="home_grid">
        <img class="hero" src="../hero.svg" alt="UX Copenhagen" />
        <div class="buy_tickets">
          <a href="/#">
            <HomeButton title="Buy Tickets" />
          </a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .home_grid {
    display: flex;
    align-items: center;
    white-space: nowrap;
    justify-content: center;
    margin-right: 15%;
  }
  @media (min-width: 800px) {
    .home_grid {
      margin-right: 0;
    }
  }

  .buy_tickets {
    order: -1;
    margin-top: 50%;
    margin-right: 12%;
    z-index: 1;
  }
  @media (min-width: 800px) {
    .buy_tickets {
      margin-top: 20%;
      margin-right: 6%;
    }
  }
  .hero {
    width: 400px;
  }

  @media (min-width: 800px) {
    .hero {
      width: 40%;
      margin-top: -3em;
    }
  }
  @media (min-width: 1400px) {
    .hero {
      width: 40%;
      margin-top: -4em;
    }
  }

  h1 {
    font-size: var(--xxlg-size);
  }

  h2 {
    margin-top: -1.2em;
    margin-left: 25%;
    color: var(--primary-text);
    font-size: var(--lg-size);
  }

  h3 {
    position: absolute;
    margin-left: 10%;
    margin-top: 5%;
    color: var(--primary-color);
    font-weight: bold;
    font-size: var(--xlg-size);
  }

  @media (min-width: 768px) {
    h3 {
      margin-left: 15%;
      margin-top: 2%;
    }
  }

  @media (min-width: 768px) {
    .home_title {
      margin-left: 10%;
    }
  }
</style>
